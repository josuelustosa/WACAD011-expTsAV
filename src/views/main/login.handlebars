<div class='col-lg-12'>
  <div class='page-header'>
    <h1 id='tables'>Acesso de Usuário</h1>
  </div>

  <div class='bs-component'>
    <form action='/login' method='post'>
      <div class='form-group'>
        <label class='col-form-label mt-2' for='username'>Usuário</label>
        <input
          type='text'
          class='form-control'
          id='username'
          name='username'
          value='{{username}}'
        />

        <label class='col-form-label mt-2' for='password'>Senha</label>
        <input
          type='password'
          class='form-control'
          id='password'
          name='password'
          value='{{password}}'
        />

        {{#if messageError}}
          <div class='invalid-feedback' style='display: block'>
            Usuário ou Senha incorretos!
          </div>
        {{/if}}

        <div class='d-grid mt-4 gap-2'>
          <input type='hidden' name='_csrf' value='{{csrf}}' />
          <button
            type='submit'
            class='btn btn-primary col-form-label mt-4'
          >Acessar</button>
        </div>
      </div>
    </form>
  </div>
</div>