<div class='col-lg-12'>
  <div class='page-header'>
    <h1 id='tables'>Adicionar Departamentos</h1>
  </div>

  <div class='bs-component'>
    <form action='/departamento/create' method='post'>
      <div class='form-group'>
        <label class='col-form-label mt-2' for='name'>Nome</label>
        <input
          type='text'
          class='form-control'
          id='name'
          name='name'
          value='{{departamento.name}}'
        />
        <div class='invalid-feedback' style='display: block'>
          {{showErrors errors 'name'}}
        </div>

        <label class='col-form-label mt-2' for='sigla'>Sigla</label>
        <input
          type='text'
          class='form-control'
          id='sigla'
          name='sigla'
          value='{{departamento.sigla}}'
        />
        <div class='invalid-feedback' style='display: block'>
          {{showErrors errors 'sigla'}}
        </div>

        <div class='d-grid mt-4 gap-2'>
          <button
            type='submit'
            class='btn btn-primary col-form-label mt-4'
          >Enviar</button>
        </div>
      </div>
    </form>
  </div>
</div>